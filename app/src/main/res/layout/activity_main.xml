<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Current Speed -->
    <TextView
        android:id="@+id/speedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed: 0.0 km/h"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <!-- Max Speed -->
    <TextView
        android:id="@+id/maxSpeedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max Speed: 0.0 km/h"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_below="@id/speedTextView"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <!-- Average Speed -->
    <TextView
        android:id="@+id/avgSpeedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avg Speed: 0.0 km/h"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_below="@id/maxSpeedTextView"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
